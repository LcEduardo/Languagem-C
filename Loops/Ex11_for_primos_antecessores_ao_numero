#include <stdio.h>
//Escreva um programa que solicite ao usuário um número e exiba todos os números primos menores ou iguais a esse número.

int main(){
	int numero;
	
	printf("Digite um numero para saber qual dos antecessores e primo: ");
	scanf("%d", &numero);
	
	for(numero; numero >= 0; numero--){
		if((numero == 2)|| (numero == 3) || (numero == 5) || (numero == 7)) {
		printf("\nNUMERO PRIMO!: %d", numero);
	}else if ((numero % 2 == 0) || (numero % 3 == 0) || (numero % 5 == 0) || (numero % 7 == 0)){
	
	}else if(numero < 2){
		
	}else{
		printf("\nNUMERO PRIMO: %d", numero);
	}
	}
}