#include <stdio.h>
//Escreva um programa que solicite ao usuário um número e exiba se ele é um número perfeito ou não.

int main(){
	int numero;
	int soma = 0;
	int i;
	
	printf("Digite um numero para determinar se ele e perfeito: ");
	scanf("%d", &numero);
	
		for(i = 1; i < numero; i++){
			if(numero % i == 0){
			soma = soma + i;
			}
		}
		if(soma == numero ){
			printf("\nESSE NUMERO E UM NUMERO PERFEITO!");
		}else{
			printf("\nESSE NUMERO NAO E UM NUMERO PERFEITO!");
		}
	
}