#include <stdio.h>
//Escreva um programa que leia uma sequência de números inteiros do usuário e exiba a soma de todos os números pares da sequência.

int main(){
	int numeros[10];
	int soma;
	int i; 
	
	for( i = 0; i < 10; i++){
		printf("Digite o numero desejado %d: ", i);
		scanf("%d", &numeros[i]);
		if(numeros[i] % 2 == 0){
			soma += numeros[i];
		}
	}
	printf("\nA soma dos numeros pares de sua lista: %d", soma);
}